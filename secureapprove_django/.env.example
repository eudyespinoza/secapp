# ==================================================
# SecureApprove Django - Environment Variables
# ==================================================

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-32-chars-min
DEBUG=True

# Database
DB_NAME=secureapprove
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379/1

# Allowed Hosts
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,secureapprove.com,api.secureapprove.com

# WebAuthn
WEBAUTHN_RP_NAME=SecureApprove
WEBAUTHN_RP_ID=localhost
WEBAUTHN_ORIGIN=http://localhost:8000

# Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@secureapprove.com

# Billing
MERCADOPAGO_ACCESS_TOKEN=your-mercadopago-access-token
MERCADOPAGO_WEBHOOK_URL=http://localhost:8000/api/billing/webhook/

# Application
APP_NAME=SecureApprove
APP_VERSION=2.0.0
APP_URL=http://localhost:8000